#ifndef COM_GETWORLDCOORDINATEOFNODEVISITOR
#define COM_GETWORLDCOORDINATEOFNODEVISITOR 1
#include <COM/Export.h>
#include <osgGA/MatrixManipulator>

#include <osg/Quat>
#include <osg/observer_ptr>

namespace COM{

	class COM_EXPORT GetWorldCoordinateOfNodeVisitor : public osg::NodeVisitor
	{
	public:
		GetWorldCoordinateOfNodeVisitor();

		virtual void apply(osg::Node& node);

		void startDone()
		{
			done = false;
		}
		osg::Vec3d getUpDaMat()
		{
			return _wcMatrix->getTrans();
		}
	private:
		bool done;
		osg::Matrixd* _wcMatrix;
	};

}

#endif

